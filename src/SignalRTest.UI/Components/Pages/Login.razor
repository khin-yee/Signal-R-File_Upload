@page "/login"
@inject HttpClient Http
@inject NavigationManager Navigation



<MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="d-flex justify-center align-center" Style="height: 100vh">
    <MudPaper Elevation="12" Class="pa-5" Style="width: 400px; border-radius: 16px; background-color: white;">
        <MudCardContent>
            <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-5" Color="Color.Dark">Chat App</MudText>

            @if (!string.IsNullOrEmpty(Error))
            {
                <MudAlert Severity="Severity.Error" Dense="true" Elevation="0" Class="mb-3">@Error</MudAlert>
            }

            <MudTextField @bind-Value="Username"
                          Label="Email"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start" Placeholder="Email"
                          AdornmentIcon="@Icons.Material.Filled.Email"
                          Class="mb-3" />

            <MudTextField @bind-Value="Password"
                          Label="Password"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          Adornment="Adornment.Start" Placeholder="Password"

                          AdornmentIcon="@Icons.Material.Filled.Lock"
                          Class="mb-4" />

            <MudButton OnClick="HandleLogin"
                       Variant="Variant.Filled"
                       Color="Color.Dark"
                       FullWidth="true"
                       Style="height: 45px;">Login</MudButton>
        </MudCardContent>

        <MudCardActions Class="justify-center mt-3">
            <MudText Typo="Typo.body2">
                Don't have an account?
                <MudLink Href="#" Color="Color.Primary" Class="ml-1">Sign up</MudLink>
            </MudText>
        </MudCardActions>
    </MudPaper>
</MudContainer>
